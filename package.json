{
  "name": "utilities-monorepo",
  "version": "1.0.0",
  "description": "Cross-platform React Native starter templates with different variants",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "dev:basic": "npm run start --workspace=packages/basic",
    "dev:auth": "npm run start --workspace=packages/auth",
    "dev:full": "npm run start --workspace=packages/full",
    "install:all": "npm install --workspaces",
    "reset:all": "npm run reset-project --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "~5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}